{
  "version": 6,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/${presetName}",
      "generator": "Ninja"
    },
    {
      "name": "release",
      "hidden": true,
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "debug",
      "hidden": true,
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "engine_debug": "ON"
      }
    },
    {
      "name": "vcpkg",
      "hidden": true,
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "name": "vcpkg-MinGW",
      "hidden": true,
      "inherits": "vcpkg",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-mingw-static",
        "VCPKG_HOST_TRIPLET": "x64-mingw-static"
      }
    },
    {
      "name": "CLion-Clang",
      "hidden": true,
      "vendor": {
        "jetbrains.com/clion": {
          "toolchain": "Clang"
        }
      }
    },
    {
      "name": "Clang-MinGW-debug",
      "inherits": [
        "debug",
        "vcpkg-MinGW",
        "CLion-Clang"
      ]
    },
    {
      "name": "Clang-MinGW-release",
      "inherits": [
        "release",
        "vcpkg-MinGW",
        "CLion-Clang"
      ]
    }
  ]
}
